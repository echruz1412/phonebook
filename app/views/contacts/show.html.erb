<%= render 'phonebook/header' %>

<h1><%= image_tag @contact.avatar.url(:thumb) %> <%= @contact.name %> </h1>

<h3>Phones</h3>
<%= render 'phones/viewphone'%>

<% if can? :create, @phone %>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">Add Phone</button>

<div id="myModal", class="modal fade", role="dialog"><div class=" modal-dialog modal-sm"><div class="modal-content"><div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button><h4 class="modal-title">Modal Header</h4></div><div class="modal-body">
<%= render 'phones/form' %></div><div class="modal-footer"><button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div></div></div></div>
<% end %>

<h3>Address</h3>
<%= render 'alamats/viewalamat'%>

<% if can? :create, @alamat %>
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myAddress">Add Address</button>


<div id="myAddress", class="modal fade", role="dialog"><div class="modal-dialog modal-sm">
<div class="modal-content"><div class="modal-header"><button type="button" class="close" data-dismiss="modal">&times;</button><h4 class="modal-title">Modal Header</h4></div><div class="modal-body">
<%= render 'alamats/form' %></div><div class="modal-footer"><button type="button" class="btn btn-default" data-dismiss="modal">Close</button></div></div></div></div><% end %>
<br><br>

<% if can? :update, @contact %>
<%= link_to "<button>Edit</button>".html_safe, edit_contact_path(@contact), :class => 'button', :id => 'button5' %>
<% end %>


<%= link_to "<button>Back</button>".html_safe, contacts_path, :class => 'button', :id => 'button5' %>




