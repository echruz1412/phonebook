<%= render 'phonebook/header' %>

<div class="container">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2>Sign up</h2>
  <%= devise_error_messages! %>
  <form>
    <div class="form-group">
      <%= f.label :email, for:'email' %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder:'Enter email', id:'email' %>
    </div>
    <div class="form-group">
      <%= f.label :password, for:'pwd' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder:'Enter password', id:'pwd' %>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, for:'pwd_confirm' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder:'Enter confirmation password', id:'pwd_confirm' %>
    </div>
    <div class="form-group">
      <%= f.label :admin %> <br />
      <%= f.radio_button :admin, true %> Yes <br />
      <%= f.radio_button :admin, false %> No
    </div>

    <%= f.submit "Sign up", class: 'btn btn-default' %>
    <%= render "devise/shared/links" %>
  </form>
  <% end %>
</div>


